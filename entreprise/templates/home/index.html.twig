{% extends "front.html.twig" %}

{% block titre %} Accueil {% endblock %}

{% block body %}
<main class="row">
    {% for info in app.flashes("message") %}
        <div class="col-12 alert alert-success my-3">{{ info }}</div>
    {% endfor %}
    {% for employe in employes %}
    <article class="col-3 border mt-3">
        <div class="my-3">
        </div>
            <h2>{{ employe.prenom }}</h2>
            <h2>{{ employe.nom }}</h2>
            <p>{{ employe.telephone }}</p>
            <p>{{ employe.email }}</p>
            <p>{{ employe.adresse }}</p>
            <p>{{ employe.poste }}</p>
            <p>{{ employe.salaire }}</p>
            <p>{{ employe.datedenaissance | date ("d/m/Y") }}</p>
            </article>
    {% endfor %}
</main>
{% endblock %}